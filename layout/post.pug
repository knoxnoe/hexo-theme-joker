block content
  
  #joker-post
    .post-head
      p.post-title= page.title
    #joker-post-main
      article#joker-article
        != page.content
      #joker-toc
        .sidebar-toc!= toc(page.content, {list_number: false, max_depth: 2, min_depth: 1})

  #paginator!= paginator()
