#joker-main
  min-height 500px

  #custom
    text-align center

  #joker-posts
    padding 0 10%

    .recent-posts
      width 100%
      display flex
      flex-wrap wrap
      margin-top 20px
      justify-content space-between
      padding 0 4em

      .card-post
        height: 350px
        border-radius 15px
        margin-top 2em
        box-sizing border-box
        box-shadow 0px 0px 40px -16px rgb(0 0 0 / 20%)
        transition .6s
        cursor pointer
        background-color transprant
        min-width 300px
        transform-style preserve-3d
        
        &:hover 
          box-shadow 0px 10px 40px -13px rgb(0 0 0 / 20%)

        &.rotatepost
          transform perspective(800px) rotateY(180deg)

        .post
          width 100%
          height 100%
          backface-visibility hidden
          border-radius 15px

          &.font-post
            transform rotateY(0deg)
            background-color #448AFF

          &.back-post
            transform rotateY(180deg)
            position relative
            top -100%
            background-color #FF9800

          .title
            font-size 1.5rem

          a
            &:hover
              color: $link-hover
      
          .time
            display flex
            justify-content space-between


    @media screen and (max-width: 600px)
      .recent-posts
        justify-content space-evenly
        padding 0


