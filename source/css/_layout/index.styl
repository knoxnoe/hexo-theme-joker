#joker-main
  min-height 500px

  #custom
    text-align center

  #joker-posts
    .recent-posts
      width 100%
      display flex
      flex-wrap wrap
      margin-top 20px
      justify-content flex-start

      .card-post
        width 30%
        height 350px
        border 6px solid #333
        border-radius 4px
        margin-top 2em
        box-sizing border-box
        padding 1em
        box-shadow 0 6px 24px 0 rgb(105 105 105), inset 0 1px 6px 0 rgb(105 105 105)
        transition 1s
        cursor pointer
        background-color transprant
        min-width 251px
        transform-style preserve-3d
        
        margin 1em 1.32%
        
        &:hover 
          box-shadow 0px 10px 40px -13px #fff
          transform: scale(1.05)

        &.rotatepost
          transform perspective(800px) rotateY(180deg)
          
          &:hover
            transform: perspective(800px) rotateY(180deg) scale(1.05)

        .post
          width 100%
          height 100%
          backface-visibility hidden
          border-radius 15px

          i.fa
            margin-right .5em
          &.font-post
            transform rotateY(0deg)
            //background-color #448AFF
            .title
              text-overflow: -o-ellipsis-lastline;
              overflow: hidden;
              text-overflow: ellipsis;
              display: -webkit-box;
              -webkit-line-clamp 2
              line-clamp 2
              -webkit-box-orient vertical
              font-size 1.5rem
            .summary
              font-style italic
              color #757575
              font-size .9rem
              height 100px
              margin-top 40px
              text-indent 1em
            a
              color #c7254e
              background-color: #f9f2f4;

              &:hover
                text-decoration: underline

          &.back-post
            transform rotateY(180deg)
            position relative
            top -100%
            // background-color #FF9800
    

  @media screen and (max-width: 600px)
    #joker-posts
      padding 0 10%
      .recent-posts
        justify-content space-evenly
        padding 0 10%
        .card-post
          width 100%
  @media screen and (min-width: 960px)
    #joker-posts
      padding 0 10%
      .recent-posts
        padding 0 3%
  @media screen and (min-width: 1100px)
    #joker-posts
      padding 0 10%
      .recent-posts
        padding 0 6%
  @media screen and (min-width: 601px) and (max-width: 959px)
    #joker-posts
      padding 0 5%
      .recent-posts
        .card-post
          width 46%

