#joker-archive
  padding 30px 10%


#joker-tags
  width 100%
  a
    background-color $theme-archive-tag-a
    border-radius 0.6em
    font-size 1rem
    padding .6em 1em
    display inline-block
    margin 1em 1em
    color $theme-font-color

    span
    .tag-count
      position relative
      bottom 0.4em
      left 0.4em

#joker-category
  width 100%
  a
    background-color $theme-archive-tag-a
    border-radius 0.6em
    font-size 1rem
    padding .6em 1em
    display inline-block
    margin 1em 1em
    color $theme-font-color

    span
    .category-count
      position relative
      bottom 0.4em
      left 0.4em