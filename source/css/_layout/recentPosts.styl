#joker-posts
  width 100%
  padding 0 10%

  .recent-posts
    width 80%

    .row
      display flex
      justify-content space-between
      margin-top 20px

      .col
        width: 28%
        height: 350px
        border-radius 15px
        padding 15px
        box-sizing border-box
        box-shadow 0px 0px 40px -27px rgb(0 0 0 / 20%)
        transition: .6s

        &:hover 
          box-shadow 0px 10px 40px -13px rgb(0 0 0 / 20%)

        .post
          width 100%
          height 100%

          .title
            font-size 1.5rem

            a
              &:hover
                color: $link-hover
          
          .time
            display flex
            justify-content space-between

    @media screen and (max-width: 600px)
      .row
        margin-top 20px
        display block

        .col
          width 100%
          margin-top 20px

