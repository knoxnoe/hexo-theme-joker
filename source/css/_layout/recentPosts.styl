#joker-posts
  width 100%

  .recent-posts
    padding 0 10%

    .row
      display flex
      justify-content space-between
      margin-top 20px

      .col
        width: 30%
        height: 200px
        border-radius 15px
        box-shadow -5px 10px 60px -13px rgb(0 0 0 / 20%)
        padding 15px
        box-sizing border-box

        .post
          width 100%
          height 100%

          .title
            font-size 1.5rem

            a
              &:hover
                color: $link-hover
          
          .time
            display flex
            justify-content space-between

