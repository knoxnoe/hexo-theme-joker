#joker-about
  padding 30px 10%

  .about-main
    display flex
    justify-content space-between
    .left-context
      width 78%
      padding-right 6em
      .intro
        margin-bottom 30px
        .intro-main
          text-indent 2em
          font-style italic
          padding 20px 0
      .custom
        .custom-slot
          margin-bottom 30px
          .custom-lists
            text-indent 2em
            padding 20px 0
            li
              line-height 2em
    .right-context 
      width 22%
      #joker-profile
        .info
          font-size 0.8rem
          color #ddd
          img
            width 100%  

  @media screen and (max-width: 600px)
    .about-main
      .left-context
        width 100%
        padding-right 0
      .right-context
        display none