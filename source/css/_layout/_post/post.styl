#joker-post
  .post-head
    width 100%
    height 500px
    background-color #009688
    margin-top -100px
    line-height 500px
    .post-title
      font-size 3rem
      text-align center
      font-weight bold

  #joker-post-main
    padding 0px 10%
    display flex
    justify-content space-between

    #joker-article
      width 70%
      padding 50px 0

      #joker-prev-next
        margin 50px 0
        display flex
        justify-content space-between
        div
          width 30%
          height 50px
          line-height 50px
          border 1px solid #000
          cursor pointer
          opacity 1
          &:hover
            opacity 0.5
          &.prev:hover .fa-arrow-left
           left 0.3em
          &.next:hover .fa-arrow-right
           right 0.3em
          a
            display inline-block
            width 100%
            height 100%
            padding 0 1em
            position relative

            &.previous
              text-align left
            &.following
              text-align right
            i.fa
              position absolute
              top 50%
              transition .5s
              transform translateY(-50%)
              &.fa-arrow-left
                left 1em
              &.fa-arrow-right
                right 1em
            span
              display inline-block
              width 100%
              height 100%
              text-align center


        
    #joker-toc
      width 20%
      position fixed
      right 10%

      li
        overflow hidden
        white-space nowrap
        text-overflow ellipsis

        