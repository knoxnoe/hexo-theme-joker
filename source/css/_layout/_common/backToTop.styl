#joker-back-to-top
  position fixed
  bottom 0
  right 0
  width: 8em;
  height: 8em;
  border-radius: 50%;
  transform: translate(50%, 50%);
  transition .5s
  display none
  &:hover
    background: #ddd;
  a
    width: 100%;
    height: 100%;
    display: inline-block;
    .fa.fa-arrow-up
      position absolute
      left 2em
      top 1.7em