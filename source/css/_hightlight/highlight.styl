#joker-post
  h1, h2, h3, h4, h5
    position: relative
    cursor pointer
    &::before
      content: "#"
      position: absolute
      left: -1.2rem
      color $hl-title-pre
      opacity 0
      transition .3s
    &:hover::before
      opacity 1


  img
    width: 70%
    display: block
    margin: 0 auto

  a
    &:hover
      color red
  
  // no hightlight & no prismjs

  // highlight
  figure
    background-color $hl-code-bg
    margin-block-start 0
    margin-block-end 0
    margin-inline-start 0
    margin-inline-end 0
    width 100%
    overflow hidden
    overflow-x auto
    border-radius 0.5em

    .code
      color $hl-code-color

      .line
        .function
          .title
            color $hl-code-title
        .keyword
          color $hl-code-keyword
        .built_in
          .keyword
            color $hl-code-builtin-keyword
        .string
          color $hl-code-string
        .number
          color $hl-code-number
  blockquote
    border-left 5px solid #eee
    font-style italic

